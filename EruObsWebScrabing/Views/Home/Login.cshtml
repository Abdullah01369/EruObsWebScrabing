
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Öğrenci Girişi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            padding: 40px;
            width: 100%;
            max-width: 400px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header img {
                width: 100px;
                margin-bottom: 15px;
            }

        .form-control {
            border-radius: 25px;
            padding: 12px 20px;
        }

        .btn-login {
            border-radius: 25px;
            padding: 12px;
            background-color: #007bff;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .input-group-text {
            background-color: transparent;
            border-right: none;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <img src="eru.png" alt="Okul Logo" class="rounded-circle">
            <h2>Öğrenci Girişi</h2>
            <p class="text-muted">Lütfen öğrenci bilgilerinizi girin</p>
        </div>
        <form method="post">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                    <input type="text" name="StudentNo" class="form-control" placeholder="Öğrenci Numarası" required>
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input type="password" name="Password" class="form-control" placeholder="Şifre" required>
                </div>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Beni Hatırla</label>
            </div>
            <button type="submit" class="btn btn-login w-100 text-white">
                Giriş Yap
                <i class="fas fa-sign-in-alt ms-2"></i>
            </button>
            <div class="text-center mt-3">
                <a href="#" class="text-muted" style="text-decoration: none;">Şifremi Unuttum</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>